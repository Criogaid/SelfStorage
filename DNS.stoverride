name: "Altair: 🌐 DNS enhanced"
desc: 自用自定义 DNS 设定
author: Criogaid
icon: "https://raw.githubusercontent.com/Koolson/Qure/master/IconSet/Color/Server.png"
category: "Altair"

unified-delay: true
tcp-concurrent: true

hosts:
  "idx.shub.mypikpak.com": [8.214.35.41]
  "hub5p.mypikpak.com": [180.163.202.47, 180.163.202.53]
  "hub5pr.mypikpak.com": [8.214.40.121]
  "hub.dcdn.mypikpak.com": [8.214.19.14]
  "rp.shub.mypikpak.com": [8.214.35.41]
  "hub5emu.mypikpak.com": [8.214.35.41]

dns:
  enable: true
  prefer-h3: true
  ipv6: true
  use-hosts: true
  use-system-hosts: true
  enhanced-mode: fake-ip
  fake-ip-range: 198.18.0.1/16
  fake-ip-filter:
    - "+.lan"
    - "+.local"
    - "+.arpa"
    - "+.market.xiaomi.com"
    - "localhost.ptlogin2.qq.com"
    - "+.localdomain"
    - "+.example"
    - "+.invalid"
    - "+.localhost"
    - "+.test"
    - "+.home.arpA"
    - "time+.*.com"
    - "ntp+.*.com"
    - "msftconnecttest.com"
    - "+.msftconnecttest.com"
    - "msftncsi.com"
    - "+.msftncsi.com"
    - "+.pool.ntp.org"
    - "+.stun.*"
    - "+.xgsdk.com"
    - "+.xoyocdn.com"
    - "+.seasungame.com"
    - "+.xoyo.com"
    - "+.wscdns.com"
    - "+.testplus.cn"
    - "lens.l.google.com"
    - "+.n.n.srv.nintendonet"
    - "+.stun.playstation.net"
    - "xbox.+.*.microsoft.com"
    - "+.*.xboxlive.com"
    - "+.mcdn.bilivideo.cn"
    - "+.captive.apple.com"
  default-nameserver:
    - 223.5.5.5
    - 223.6.6.6
    - 119.29.29.29
  nameserver:
    - https://doh.pub/dns-query
    - https://dns.alidns.com/dns-query#h3=true
    - https://223.5.5.5/dns-query#h3=true
    - https://223.6.6.6/dns-query#h3=true
    - tls://dns.alidns.com
    - tls://223.5.5.5:853
    - tls://223.6.6.6:853
  nameserver-policy:
    "+.xgsdk.com": https://dns.alidns.com/dns-query#h3=true
    "+.xoyocdn.com": https://dns.alidns.com/dns-query#h3=true
    "+.seasungame.com": https://dns.alidns.com/dns-query#h3=true
    "+.xoyo.com": https://dns.alidns.com/dns-query#h3=true
